[user]
  name = Maxim Chernyak
  email = max@bitsonnet.com

[alias]
  co = checkout
  st = status -sb
  # Push and track
  publish = push -u

[color]
  diff = auto
  status = auto
  branch = auto
  ui = auto

[core]
  excludesfile = ~/.gitignore_global
  autocrlf = input
  pager = less -FRSX

[apply]
  whitespace = nowarn

[push]
  default = current

[credential]
  helper = osxkeychain

[include]
  path = .secrets/git
[filter "lfs"]
	clean = git lfs clean %f
	smudge = git lfs smudge %f
	required = true
